    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^6.19.2",
    "@types/pg": "^8.16.0",
    "bcrypt": "^6.0.0",
    "contracts": "file:../../lib/contracts",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.17.1",
    "prisma": "^6.19.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
